{{!-- edit-animal.hbs --}}
<h1>Edit Animal</h1>
<form action="/animals/update/{{animal._id}}" method="POST">
  <label for="zoo">Zoo:</label>
  <input type="text" id="zoo" name="zoo" value="{{animal.zoo}}" required><br>

  <label for="scientificName">Scientific Name:</label>
  <input type="text" id="scientificName" name="scientificName" value="{{animal.scientificName}}" required><br>

  <label for="commonName">Common Name:</label>
  <input type="text" id="commonName" name="commonName" value="{{animal.commonName}}" required><br>

  <label for="givenName">Given Name:</label>
  <input type="text" id="givenName" name="givenName" value="{{animal.givenName}}" required><br>

  <label for="gender">Gender:</label>
  <select id="gender" name="gender" required>
    <option value="Male" {{#if (eq animal.gender "Male")}}selected{{/if}}>Male</option>
    <option value="Female" {{#if (eq animal.gender "Female")}}selected{{/if}}>Female</option>
    <option value="Other" {{#if (eq animal.gender "Other")}}selected{{/if}}>Other</option>
  </select><br>

  <label for="dateOfBirth">Date of Birth:</label>
  <input type="date" id="dateOfBirth" name="dateOfBirth" value="{{animal.dateOfBirth}}" required><br>

  <label for="age">Age:</label>
  <input type="number" id="age" name="age" value="{{animal.age}}" required><br>

  <label for="isTransportable">Transportable:</label>
  <input type="checkbox" id="isTransportable" name="isTransportable" {{#if animal.isTransportable}}checked{{/if}}><br>

  <button type="submit">Update Animal Record</button>
</form>
<form action="/animals/delete/{{animal._id}}" method="POST">
  <button type="submit">Delete Animal</button>
</form>
